<!-- Views/WorkDetailsPage.xaml -->
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarWorkshopApp.Views.WorkDetailsPage"
             xmlns:viewModels="clr-namespace:CarWorkshopApp.ViewModels"
             x:DataType="viewModels:WorkDetailsViewModel"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,5,0,0" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3498db" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="0,20,0,0" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Frame BorderColor="#e0e0e0" Padding="10" Margin="0,0,0,20">
                <VerticalStackLayout>
                    <Label Text="Customer Info" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding CustomerName}" />
                    <Label Text="Vehicle Info" FontAttributes="Bold" FontSize="18" Margin="0,10,0,0" />
                    <Label Text="{Binding VehicleInfo}" />
                </VerticalStackLayout>
            </Frame>
            
            <Label Text="Work Details" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10" />
            
            <Label Text="Mechanic Name" />
            <Entry Text="{Binding MechanicName}" Placeholder="Enter mechanic name" />
            
            <Label Text="Hours Worked" />
            <Entry Text="{Binding HoursWorked}" Keyboard="Numeric" />
            
            <Label Text="Hourly Rate (DKK)" />
            <Entry Text="{Binding HourlyRate}" Keyboard="Numeric" />
            
            <Label Text="Materials Used" />
            <Editor Text="{Binding MaterialsUsed}" Placeholder="List materials used" 
                    HeightRequest="100" AutoSize="TextChanges" />
            
            <Label Text="Materials Cost (DKK)" />
            <Entry Text="{Binding MaterialsCost}" Keyboard="Numeric" />
            
            <Frame BorderColor="#e0e0e0" BackgroundColor="#f8f9fa" Padding="10" Margin="0,10,0,10">
                <VerticalStackLayout>
                    <Label Text="Total Cost" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding TotalCost, StringFormat='{0:F2} DKK'}" FontSize="20" TextColor="#2ecc71" />
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Save Work Details" Command="{Binding SaveWorkDetailsCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>