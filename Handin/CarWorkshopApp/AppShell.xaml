<!-- AppShell.xaml -->
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarWorkshopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CarWorkshopApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="New Order" Icon="add.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:NewWorkOrderPage}" />
        </Tab>
        <Tab Title="Calendar" Icon="calendar.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:CalendarPage}" />
        </Tab>
    </TabBar>

</Shell>