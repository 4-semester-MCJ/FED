<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CarWorkshopAwesomeApp.ViewModels"
             x:Class="CarWorkshopAwesomeApp.Views.TaskOverviewPage">
    
    <ContentPage.BindingContext>
        <vm:TaskOverviewViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Task Overview" FontSize="24" HorizontalOptions="Center"/>

        <DatePicker Date="{Binding SelectedDate}"/>

        <ListView ItemsSource="{Binding FilteredTasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
